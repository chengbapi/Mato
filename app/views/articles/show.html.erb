<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Content:</b>
  <%= @article.content %>
</p>

<% @article.replies.each do |reply| %>
  <p>
    <b><%= user_tag(reply.user) %></b>
    于<%= reply.created_at %>说:</ br>
    <%= reply.content %>

  </p>
<% end %>
<%= link_to 'Edit', edit_user_article_path(current_user,@article) %> |
