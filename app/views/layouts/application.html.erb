<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%= render_page_title %>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="description" content="<%= @description.nil?  ||  "马头网" %>"/>
  <%= yield :style %>
  <% # favicon_link_tag "favicon.ico" %>

  <%= yield :script %>
</head>
<body>
  <header>
    <%= render :partial => "shared/header" %>   
  </header>
  <nav id="topbar">
    <%= yield :toolbar %>
  </nav>
  <div class="flash">
    <%= render :partial => "shared/flash", 
      :locals => {:flash => flash} %>
  </div>
  <section id="content">
    <%= yield %>
  </section>
 </body>
<div id="footer">
  <footer><%= render :partial => "layouts/footer" %></footer>
</div>
</html>
